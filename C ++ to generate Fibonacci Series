#include <iostream>
#include <conio.h>
#include <iomanip>
using namespace std;
int main()
{
	int n1 = 0, n2 = 1, temp = 0;
	int n,i; 
	cout << "Enter the numbers of the terms: ";
	cin >> n
	cout << "The Fibonacci Series: ";
	if (n == 1)
	{
		cout << 0;
	}
	else if (n == 2)
	{
		cout << 0 << " " << 1;
	}
	else 
	{
		cout << 0 << " " << 1 << " ";
		for (i = 3; i <= n; ++i) 
		{

			temp = n1 + n2
			n1 = n2; 
			n2 = temp
			cout << temp << setw(4); 
		}
	}
	_getch();
	return 0;
}
